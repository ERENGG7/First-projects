using System;

namespace cycles
{
    class Program
    {
        static void Main(string[] args)
        {
            // средно аритметично
            int n = int.Parse(Console.ReadLine());
            double sum = 0;

            for (int i = 0; i < n; i++)
            {
                int num = int.Parse(Console.ReadLine());
                sum+=num;


            }

            double average = sum / n;
            Console.WriteLine($"{average:f2}");
        }
    }
}
